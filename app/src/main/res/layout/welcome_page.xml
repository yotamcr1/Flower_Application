<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/grand_sunflower_field_iphone_wallpapers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="211dp"
        android:layout_height="88dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/my_button_bg"
        android:cursorVisible="true"
        android:radius="10dp"
        android:shape="ring"
        android:text="לחצו לזיהוי"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/about"
        android:layout_width="58dp"
        android:layout_height="65dp"
        android:layout_gravity="top|right"
        android:background="#00FFFFFF"
        app:srcCompat="@android:drawable/ic_dialog_info"
        tools:ignore="MissingConstraints,RtlHardcoded" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="187dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/welcome_page_text"
        android:textColor="#000000"
        android:textSize="38sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="@font/almendra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

    <Button
        android:id="@+id/flower_list_button"
        android:layout_width="211dp"
        android:layout_height="88dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/my_button_bg"
        android:cursorVisible="true"
        android:radius="10dp"
        android:shape="ring"
        android:text="לרשימת הפרחים"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />


</android.support.constraint.ConstraintLayout>