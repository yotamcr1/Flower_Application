<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.flower_rec_pack.tflite.MainActivity">

    <com.wonderkiln.camerakit.CameraView
        android:id="@+id/cameraView"
        android:layout_width="fill_parent"
        android:layout_height="555dp"
        android:layout_gravity="center|top">

    </com.wonderkiln.camerakit.CameraView>


    <LinearLayout
        android:id="@+id/linlay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="600dp"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageViewResult"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginRight="-5dp"
            android:padding="2dp" />

    </LinearLayout>

    <Button
        android:id="@+id/textViewResult"
        android:layout_width="337dp"
        android:layout_height="78dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="150dp"
        android:background="#003BE8FF"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="92dp"
        android:layout_height="78dp"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="650dp"
        android:layout_marginRight="300dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/sign_info_icon" />

    <ImageButton
        android:id="@+id/btnDetectObject"
        android:layout_width="128dp"
        android:layout_height="119dp"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:background="#00FF0000"
        android:text="@string/detect_object"
        android:textAllCaps="false"
        app:srcCompat="@drawable/camera_1085705_1280" />

    <ImageButton
        android:id="@+id/btnToggleCamera"
        android:layout_width="100dp"
        android:layout_height="78dp"
        android:layout_gravity="bottom|right"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/exe_icon_70" />


</FrameLayout>